name: "terminus-development"

services:
  web:
    init: true
    build:
      context: .
      target: development
    environment:
      HANAMI_PORT: ${HANAMI_PORT}
      API_URI: ${API_URI}
      APP_SECRET: ${APP_SECRET}
      DATABASE_URL: postgres://${PG_USER}:${PG_PASSWORD}@database:${PG_PORT}/${PG_DATABASE}
      REDIS_URL: redis://:${REDIS_PASSWORD}@cache:${REDIS_PORT}/${REDIS_DATABASE}
    ports:
      - "${HANAMI_PORT}:${HANAMI_PORT}"
    volumes:
      - ".:/app"
    command: bin/docker/entrypoint-dev bundle exec puma --config ./config/puma.rb
    depends_on:
      database:
        condition: service_healthy
      cache:
        condition: service_healthy
    networks:
      - terminus-network

  worker:
    build:
      context: .
      target: development
    environment:
      APP_SECRET: ${APP_SECRET}
      DATABASE_URL: postgres://${PG_USER}:${PG_PASSWORD}@database:${PG_PORT}/${PG_DATABASE}
      REDIS_URL: redis://:${REDIS_PASSWORD}@cache:${REDIS_PORT}/${REDIS_DATABASE}
    command: bundle exec sidekiq -r ./config/sidekiq.rb
    volumes:
      - ".:/app"
    depends_on:
      database:
        condition: service_healthy
      cache:
        condition: service_healthy
    networks:
      - terminus-network

  database:
    image: postgres:18.1
    environment:
      POSTGRES_USER: ${PG_USER}
      POSTGRES_PASSWORD: ${PG_PASSWORD}
      POSTGRES_DB: ${PG_DATABASE}
    ports:
      - "${PG_PORT}:${PG_PORT}"
    volumes:
      - database-data:/var/lib/postgresql
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${PG_USER} -d ${PG_DATABASE}"]
      interval: 1s
      timeout: 2s
      retries: 5
      start_period: 2s
    networks:
      - terminus-network

  cache:
    image: redis:8-alpine
    ports:
      - "${REDIS_PORT}:${REDIS_PORT}"
    command: redis-server --requirepass ${REDIS_PASSWORD}
    volumes:
      - cache-data:/data
    healthcheck:
      test: ["CMD", "redis-cli", "--pass", "${REDIS_PASSWORD}", "ping"]
      interval: 1s
      timeout: 2s
      retries: 5
      start_period: 2s
    networks:
      - terminus-network

networks:
  terminus-network:

volumes:
  database-data:
  cache-data:
