<li id="<%= item.id %>" class="bit-card">
  <h2 class="label"><%= item.name %></h2>

  <%= tag.img src: item.screenshot_url, alt: "Screenshot", class: :screen, loading: :lazy %>

  <div class="info">
    <span><%= pluralize "connection", "s", item.statistics.installs %></span>
    <span><%= pluralize "fork", "s", item.statistics.forks %></span>
  </div>

  <div class="actions">
    <%= render "shared/popovers/trigger",
               name: "preview-#{item.id}",
               icon: :eye,
               width: 25,
               height: 25 %>

    <%= render "shared/popovers/trigger", name: :import, icon: :plus, width: 25, height: 25 %>

    <%#= form_for routes.path(:extensions_gallery_create) do |form| %>
      <%#= form.hidden_field :id, value: item.id %>

      <%#= form.submit class: "bit-button" do %>
       <%#= image_tag "icons/plus.svg", alt: "Import", class: :icon, width: 25, height: 25 %>
      <%# end %>
    <%# end %>
  </div>

  <dialog id="popover-preview-<%= item.id %>"
          class="bit-popover-content bit-popover-screen"
          popover="auto">
    <figure>
      <%= tag.img src: item.screenshot_url, alt: "Screen", loading: :lazy %>
      <figcaption><%= item.name %></figcaption>
    </figure>

    <p class="brand">
      <%= image_tag "logo/with_label.svg", alt: "Logo with Label", width: 150, height: 75 %>
    </p>
  </dialog>
</li>
