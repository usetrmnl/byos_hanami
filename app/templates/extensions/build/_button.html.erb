<%= form_for :extension,
             path,
             **HTMX[
               post: path,
               target: :this,
               swap: "swap:1s",
               "on::before-request" => %(this.innerHTML = "<button class='bit-button-accept' disabled>Enqueuing...</button>")
             ] do |form| %>
  <%= form.submit class: "bit-button-accept" do %>
    <%= image_tag "icons/gear_and_hammer.svg",
                  alt: "Build",
                  class: :icon,
                  width: 25,
                  height: 25,
                  loading: :lazy %>

    Build
  <% end %>
<% end %>
