<% screen = item.screen %>

<div class="item">
  <%= render "shared/popovers/triggers/preview", name: "preview-#{screen.id}" do %>
    <%= render "shared/screen", uri: screen.image_uri %>
  <% end %>

  <%= render "shared/popovers/content/preview",
             id: screen.id,
             label: screen.label,
             uri: screen.image_uri,
             width: screen.width,
             height: screen.height %>

  <div class="actions">
    <%= render "shared/actions/edit",
               path: routes.path(:playlist_item_edit, playlist_id: item.playlist_id, id: item.id),
               target: "closest .item" %>

    <%= render "shared/actions/delete",
               path: routes.path(:playlist_item_delete, playlist_id: item.playlist_id, id: item.id),
               subject: :item,
               target: "closest .item" %>
  </div>
</div>
