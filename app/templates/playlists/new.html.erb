<%= render "shared/title", text: "New Playlist" %>

<section class="bit-page page-playlists">
  <header class="bit-header">
    <ul class="bit-breadcrumbs">
      <li class="bit-breadcrumb">
        <%= link_to "Playlists", routes.path(:playlists), class: :link %>
      </li>

      <li class="bit-breadcrumb">New</li>
    </ul>
  </header>

  <div class="bit-body">
    <div class="playlists">

      <%= form_for :playlist,
                   routes.path(:playlists),
                   class: "bit-card bit-form playlist" do |form| %>
        <h1 class="label">New Playlist</h1>

        <%= render "playlists/shared/fields", form:, playlist:, fields: fields.value, errors: %>

        <div class="form-actions">
          <%= render "shared/actions/save", form:, path: routes.path(:playlist_create) %>
          <%= link_to "Cancel", routes.path(:playlists), class: "bit-button-decline" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
