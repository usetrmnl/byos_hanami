<%= render "shared/title", text: "Devices" %>

<section class="bit-page page-devices">
  <header class="bit-header">
    <h1 class="label">
      Devices
      <%= render "shared/popovers/trigger", name: :overview, width: 20, height: 20 %>
    </h1>

    <div class="bit-actions">
      <%= render "shared/search",
                 path: routes.path(:devices),
                 query:,
                 pick: ".devices",
                 target: "next .devices" %>

      <a href="<%= routes.path :device_new %>"
         class="bit-button-accept"
         hx-get="<%= routes.path :device_new %>"
         hx-trigger="click, keyup[ctrlKey&&key=='n'] from:body"
         hx-target="closest .page-devices"
         hx-push-url="true">
        New
      </a>
    </div>
  </header>

  <%= scope(:popover_content, name: :overview, label: "Overview").render do %>
    <p>These are you devices, both physical and virtual, managed by this server.</p>

    <h3 class="label">Search</h3>

    <p>You can fuzzy search by device label using partial or full label.</p>

    <h3 class="label">Keyboard Shortcuts</h3>

    <ul>
      <li><kbd>CONTROL + n</kbd>: New device.</li>
      <li><kbd>CONTROL + s</kbd>: Save device (when within form).</li>
    </ul>
  <% end %>

  <% if devices.any? %>
    <ul class="bit-gallery devices">
      <% devices.each do |device| %>
        <%= device.render :device %>
      <% end %>
    </ul>
  <% else %>
    <div class="devices">
      <%= render "shared/empty", message: "No devices found." %>
    </div>
  <% end %>
</section>
