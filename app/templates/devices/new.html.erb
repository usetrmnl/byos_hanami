<%= render "shared/title", text: "New Device" %>

<section class="page-devices">
  <header class="page-header">
    <ul class="site-breadcrumbs">
      <li class="breadcrumb"><%= link_to "Devices", routes.path(:devices), class: :link %></li>
      <li class="breadcrumb">New</li>
    </ul>
  </header>

  <div class="page-body">
    <div class="device">
      <figure class="screen">
        <%= render :image, uri: assets["setup.svg"]%>
      </figure>

      <form action="/devices" method="post" class="page-form">
        <%= render :fields, models:, playlists:, device:, fields: fields.value, errors: %>

        <div class="form-actions">
          <%= render "save_button", verb: :post, path: "/devices" %>
          <%= link_to "Cancel", routes.path(:devices), class: "button-decline" %>
        </div>
      </form>
    </div>
  </div>
</section>
