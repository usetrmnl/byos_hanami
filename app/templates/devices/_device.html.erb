<li id="<%= device.id %>" class="device">
  <%= render :image, uri: device.image_uri %>

  <h2 class="label"><%= device.label %></h2>

  <%= render "measurements", device: %>

  <div class="actions">
    <a href="/devices/info/<%= device.id %>"
       hx-get="/devices/info/<%= device.id %>"
       hx-target="closest .device"
       hx-swap="outerHTML">
      Expand
    </a>

    <%= render "edit_link", device: %>
    <%= render "delete_link", device: %>
  </div>
</li>
