<li id="<%= device.id %>" class="device">
  <%= render :image, uri: device.image_uri %>

  <h2 class="label"><%= device.label %></h2>

  <div class="measurements">
    <label class="measurement">
      <%= tag.meter min: 0,
                    low: 10,
                    high: 90,
                    optimum: 95,
                    max: 100,
                    value: device.battery_percentage,
                    class: :battery %>
      <%= format_number device.battery_percentage, precision: 0 %>% Battery
    </label>

    <label class="measurement">
      <%= tag.meter min: 0,
                    low: 10,
                    high: 90,
                    optimum: 95,
                    max: 100,
                    value: device.signal_percentage,
                    class: :signal %>
      <%= device.signal_percentage %>% Signal
    </label>
  </div>

  <div class="actions">
    <a href="/devices/info/<%= device.id %>"
       hx-get="/devices/info/<%= device.id %>"
       hx-target="closest .device"
       hx-swap="outerHTML">
      Expand
    </a>

    <%= render "edit_link", device: %>
    <%= render "delete_link", device: %>
  </div>
</li>
