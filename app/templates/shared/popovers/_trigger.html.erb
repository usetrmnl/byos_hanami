<%= tag.button type: :button,
               class: locals.fetch(:class, "bit-popover-trigger"),
               popovertarget: "popover-#{name}" do %>
  <%= image_tag "icons/#{locals.fetch :icon, :info}.svg",
                class: :icon,
                width: locals.fetch(:width, 15),
                height: locals.fetch(:height, 15),
                loading: :lazy %>
  <%= locals.fetch :label, nil %>
<% end %>
